<div class="khoibentrai-group" id="color">
  <h3>Nhóm màu</h3>
  <% if (listDetail.length > 0 ) { %> <% listDetail.map(detail => { %> <% if
  (detail.color != '') { %>
  <label for="<%= detail._id %>" class="khoibentrai-group-color">
    <input
      type="checkbox"
      name=""
      onclick="checkboxColor(this, '<%= detail.color %>')"
      id="<%= detail._id %>"
    />
    <span><%= detail.color %></span>
  </label>
  <% } %> <% }) %> <% } else { %>
  <label for="color-select" class="khoibentrai-group-color">
    <input
      type="checkbox"
      name=""
      id="color-select"
      onclick="checkboxColor(this, '<%= colorName %>')"
      checked
    />
    <span><%= colorName %></span>
  </label>
  <% } %>
</div>
